<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fil.NewCameraActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                >


                <ImageButton
                    android:id="@+id/image_customer_camera_dialog"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_camera_enhance_blue_220dp"
                    />

                <ProgressBar
                    android:id="@+id/progress_bar_wait_upload_image_customer_camera_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/clear_url_customer_camera_dialog"
                    android:layout_width="34dp"
                    android:layout_height="30dp"
                    android:layout_alignLeft="@+id/image_customer_camera_dialog"
                    android:layout_alignStart="@+id/image_customer_camera_dialog"
                    android:src="@drawable/ic_clear_read_24dp" />

            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="430dp"
            android:layout_marginBottom="30dp"

            >


            <Button
                android:id="@+id/btn_save_photo_in_customer_camera_dialog"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/labny"
                android:text="حفظ الصوره"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="20dp" />

        </LinearLayout>



        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_image_in_request_customer_camera_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_add_circle_outline_white_60dp"
            app:backgroundTint="#61c423"
            app:borderWidth="0dp"
            android:layout_marginTop="380dp"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            app:elevation="6dp"
            tools:ignore="UnknownId" />



    </androidx.cardview.widget.CardView>


</LinearLayout>