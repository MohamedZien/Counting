<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:background="@color/labny"
        android:layout_below="@+id/toolbar"
        android:orientation="vertical"
        android:scaleType="fitXY">



        <RelativeLayout
            android:layout_width="173dp"
            android:layout_height="183dp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/profile_image_mothamen"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:src="@drawable/profile"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="2dp"
                app:civ_shadow_gravity="center" />

          <!--  <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_plus"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/profile_image_mothamen"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_plus"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1" />
-->

        </RelativeLayout>

        <TextView
            android:id="@+id/txt_profile_dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"

            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_emaile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/lnrlyout">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:id="@+id/appearance_and_disappearance"
                android:layout_marginRight="15dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/card_emaile"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_emaile"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txt_profile_dialog_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="#00000000"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:inputType="text"
                            android:hint="البريد الاكتروني"
                            android:letterSpacing="0.1"
                            android:textColor="@color/labny"
                            android:textColorHint="@color/labny"
                            android:textSize="13dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_email"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/card_address"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_adress"
                        android:orientation="horizontal"
                        android:padding="16dp">


                        <TextView
                            android:id="@+id/txt_profile_dialog_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="#00000000"
                            android:gravity="center"
                            android:inputType="text"
                            android:hint="موبايل"
                            android:letterSpacing="0.1"
                            android:layout_weight="1"
                            android:textColor="@color/labny"
                            android:textColorHint="@color/labny"
                            android:textSize="13dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_phone_android_blue_24dp"
                            android:layout_gravity="center"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="25dp"
                    android:id="@+id/card_mobile"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="50dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_marginTop="20dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/linear_mobile"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/txt_profile_dialog_phone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:background="#00000000"
                            android:gravity="center"
                            android:inputType="text"
                            android:hint=" رقم تليفون"
                            android:layout_weight="1"
                            android:letterSpacing="0.1"
                            android:textColor="@color/labny"
                            android:textColorHint="@color/labny"
                            android:textSize="13dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/ic_phone_"
                            android:layout_gravity="center"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>




            </LinearLayout>
        </LinearLayout>






    </RelativeLayout>
</LinearLayout>